{
    "name": "inditex-test",
    "version": "1.0.1",
    "description": "Technical test Frontend for Inditex",
    "author": "Juan del Valle",
    "source": "src/public/index.html",
    "scripts": {
        "dev": "parcel",
        "build": "parcel build src/public/index.html --no-cache --no-source-maps",
        "start": "npm run build && http-server -p 8080 dist",
        "lint": "eslint --ext .js,.ts,.tsx .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|tsx|json)\"",
        "test": "jest",
        "test:cover": "jest --coverage"
    },
    "dependencies": {
        "@reduxjs/toolkit": "1.9.3",
        "axios": "1.3.5",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-redux": "8.0.5",
        "redux-saga": "^1.2.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "browserModern": "dist/index.html",
    "targets": {
        "browserModern": {
            "engines": {
                "browsers": [
                    "last 1 Chrome version"
                ]
            }
        }
    },
    "devDependencies": {
        "@parcel/transformer-sass": "2.8.3",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "14.0.0",
        "@testing-library/user-event": "14.4.3",
        "@types/node": "18.15.11",
        "@types/react": "18.0.35",
        "@types/react-dom": "18.0.11",
        "@typescript-eslint/eslint-plugin": "5.58.0",
        "@typescript-eslint/parser": "5.58.0",
        "buffer": "^5.7.1",
        "eslint": "8.38.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-react": "7.32.2",
        "http-server": "14.1.1",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "jest-extended": "^3.2.4",
        "parcel": "2.8.3",
        "prettier": "2.8.7",
        "process": "0.11.10",
        "ts-jest": "^29.1.0",
        "typescript": "5.0.4"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "preset": "ts-jest",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/__tests__/setupTests.tsx"
        ],
        "testMatch": [
            "**/__tests__/**/*.(test|spec).(ts|tsx|js)"
        ]
    }
}
